<UserControl
    x:Class="CloudCash.Client.Modules.Sell.Controls.TableProductSellEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CloudCash.Client.Modules.Sell.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
        
        <TextBlock x:Uid="TableProductSellEdit_Title"
                   Style="{StaticResource TitleTextBlockStyle}"/>

        <NumberBox x:Name="Discount"
                   x:Uid="TableProductSellEdit_Discount"                
                   Margin="0 24 0 0"
                   Minimum="0"
                   Maximum="100"/>

        <NumberBox x:Name="SellCount"
                   x:Uid="TableProductSellEdit_SellCount"
                   Margin="0 12 0 0"
                   Minimum="0"/>

    </StackPanel>
</UserControl>
